#!/bin/sh

/bin/sh $HOME/.scripts/prompt.sh "Deseja desligar o bluetooth?" "bluetoothctl power off & systemctl stop bluetoothd"
/bin/sh $HOME/.scripts/prompt.sh "Deseja reduzir a brilho da tela para 50%?" "brightnessctl set 50%; kill -45 $(pidof dwmblocks)"
/bin/sh $HOME/.scripts/prompt.sh "Deseja reduzir a brilho da tela para 1%?" "brightnessctl set 1%; kill -45 $(pidof dwmblocks)"
/bin/sh $HOME/.scripts/prompt.sh "Deseja mudar o fundo da tela para preto?" "feh --bg-fill "$HOME"/.config/.wallpaper/black.png"
/bin/sh $HOME/.scripts/prompt.sh "Deseja encerrar o preload?" "systemctl stop preload"
/bin/sh $HOME/.scripts/prompt.sh "Deseja encerrar o insync?" "killall insync"
/bin/sh $HOME/.scripts/prompt.sh "Deseja encerrar o cron?" "systemctl stop cronie"
/bin/sh $HOME/.scripts/prompt.sh "Deseja encerrar o iwd?" "systemctl stop iwd"
/bin/sh $HOME/.scripts/prompt.sh "Deseja encerrar o smbd" "systemctl stop smbd"
/bin/sh $HOME/.scripts/prompt.sh "Deseja encerrar o smbd" "systemctl stop smbd"
/bin/sh $HOME/.scripts/prompt.sh "Deseja encerrar o nmb" "systemctl stop nmb"
/bin/sh $HOME/.scripts/prompt.sh "Deseja encerrar o ssb" "systemctl stop ssb"
/bin/sh $HOME/.scripts/prompt.sh "Deseja encerrar o networkd" "systemctl stop networkd"
/bin/sh $HOME/.scripts/prompt.sh "Deseja encerrar o libvirtd" "systemctl stop libvirtd"
/bin/sh $HOME/.scripts/prompt.sh "Deseja encerrar o docker" "systemctl stop docker"
/bin/sh $HOME/.scripts/prompt.sh "Deseja encerrar o ufw" "systemctl stop ufw"
/bin/sh $HOME/.scripts/prompt.sh "Deseja encerrar o firewalld" "systemctl stop firewalld"
/bin/sh $HOME/.scripts/prompt.sh "Deseja encerrar o fail2ban" "systemctl stop fail2ban"
/bin/sh $HOME/.scripts/prompt.sh "Deseja encerrar o apparmor" "systemctl stop apparmor"
